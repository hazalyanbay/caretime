<div>
  <div id="video_window">
    <iframe src="https://www.youtube.com/embed/videoseries?list=PLx0sYbCqOb8TBPRdmBHs5Iftvv9TPboYG" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
  </div>
<a class="js-hidebtn" href="#"><i class="far fa-eye-slash"></i></a>
 <div class="js-hiddenchat">
  <% if @ticket.issue_type == "I'm in danger, I need help!" %>
      <div>
        <p>Police is on the way!<br>
        Please stay in contact with one of our agents<br>
        </p>
      </div>
  <% elsif @ticket.issue_type == "I want to use hidden live chat" %>
    <%# <div>
      <a href="#">Start hidden chat</a>
    </div> %>
  <% else  %>
    <%# !!!!!!Video chat!!!!!! %>
    <div id="videos"
          data-controller="vonage"
          data-vonage-api-key="<%= ENV["VONAGE_API_KEY"]  %>"
          data-vonage-session-id="<%= @chatroom.vonage_session_id  %>"
          data-vonage-token="<%= @token %>"
          data-vonage-name="<%= current_user.first_name  %>">
    </div>
  <% end %>
  
  <h5>Chat</h5>
  <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
    <% @chatroom.messages.each do |message| %>
      <div class="message-container" id="message-<%= message.id %>">
        <i class="author">
          <span><%= message.user.email %></span>
          <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
        </i>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>

  <%# WE NEED TO FIX THIS CHAT. IT SKIPS AUTHENTICATION TOKEN IN MESSAGES CONTROLLER! %>
  <div class="mb-5">
    <%= simple_form_for([ @chatroom, @message ], remote: true) do |f| %>
      <%= f.input :content, label: false, placeholder: "Write your message" %>
      <%= f.submit "Send" %>
    <% end %>
  </div>
  
  <%= link_to "Home", root_path, class: "btn btn-primary mb-5" %>
</div>

