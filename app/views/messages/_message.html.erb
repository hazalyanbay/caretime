<div class="message-container" id="message-<%= message.id %>">
  <span class="message-content__author"><%= message.user.first_name %></span>
  <div class="d-flex align-items-start">
    <div class="avatar-container">
      <% if message.user.avatar.attached? %>
        <%= cl_image_tag message.user.avatar.key, class: "avatar dropdown-toggle" %>
      <% else %>
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle" %>
      <% end %>
    </div>
    <div class="message-content">
      <span class="message-content__text"><%= message.content %></span>
    </div>
  </div>
</div>

