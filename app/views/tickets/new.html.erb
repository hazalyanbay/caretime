<div class="container col-10">
  <% Ticket.styles.each do |style| %>
    <%= simple_form_for(@ticket) do |f| %>
      <%= f.input :issue_type, as: :hidden, input_html: {value: style} %>
      <% if style == "I'm in danger, I need help!" %>
        <%= f.submit style, data: { confirm: 'Are you sure?' }, class: "btn btn-primary w-100" %>
      <% else %>
        <%= f.submit style, class: "btn btn-primary w-100" %>

      <% end %>
    <% end %>
  <% end %>

  <%= link_to "Read about domestic violence", information_path, class: "btn btn-primary w-100 mt-3" %>
  <%= link_to "Back", root_path, class: "btn btn-primary mt-3" %>
</div>
