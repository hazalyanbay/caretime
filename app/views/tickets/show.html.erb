<span><%= @ticket.issue_type %></span>
<span><%= @ticket.status %></span>
<span><%= @ticket.comment %></span>

<div>
  <%= simple_form_for(@ticket) do |f| %>
    <%= f.label :issue_type %>
    <%= f.text_field :issue_type %>
    <%= f.label :status %>
    <%= f.text_field :status %>
    <%= f.label :comment %>
    <%= f.text_field :comment %>
    <%= f.submit %>
  <% end %>
</div>
