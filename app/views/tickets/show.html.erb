
<h2>Issue Type</h2>
<h3 style='color:red'><strong><%= @ticket.issue_type %></strong></h3>

<div>
  <table>
    <tbody>
      <tr>
        <th style='padding-right:40px;'>Name</th>
        <th style='padding-right:40px;'>Phone Number</th>
        <th style='padding-right:40px;'>Address</th>
        <th style='padding-right:40px;'>Email</th>
      </tr>
      <tr>
        <td style='padding-right:40px;'><%= @ticket.victim.first_name%></td>
        <td style='padding-right:40px;'><%= @ticket.victim.phone_number %></td>
        <td style='padding-right:40px;'><%= @ticket.victim.address %></td>
        <td style='padding-right:40px;'><%= @ticket.victim.email %></td>
      </tr>
    </tbody>
  </table>
</div>

<div>
  <table>
    <tbody>
      <tr>
        <th style='padding-right:40px;'>Contact Name</th>
        <th style='padding-right:40px;'>Contact Number</th>
      </tr>
      <tr>
        <td style='padding-right:40px;'><%= @ticket.victim.contact.full_name %></td>
        <td style='padding-right:40px;'><%= @ticket.victim.contact.phone_number%></td>
      </tr>
    </tbody>
  </table>
</div>

<div>
  <button type="button" class="btn btn-link" style='border:1px solid #00FFFF; border-radius:25%;margin-right: 30px;  '><%= link_to 'edit', edit_ticket_path %></button>
  <button type="button" class="btn btn-link" style='border:1px solid #00FFFF; border-radius:25%;'><%= link_to 'Go to chatroom!', chatroom_path(@ticket.chatroom) %></button>
</div>


